{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "mapRoot": "./dist",
  "include": [
    "./"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
