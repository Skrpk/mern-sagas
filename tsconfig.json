{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./client/**/*",
    "./server/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "webpack.config.dev.js",
    "webpack.config.prod.js",
    "webpack.config.server.js",
    "webpack.config.babel.js"
  ]
}
